<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TalkTales" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
<!--        <item name="colorSurface">@color/white_50</item>-->
<!--        <item name="colorContainer">@color/white_50</item>-->
    </style>

    <style name="EditTextStyle">
        <item name="colorControlActivated">@color/orange_200</item>
    </style>

    <style name="Widget.App.Toolbar.Default" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="titleTextAppearance">@style/TextAppearance.AppBar.Default.Title</item>
        <item name="titleTextColor">@color/black </item>
    </style>

    <style name="TextAppearance.AppBar.Default.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/ubuntu_mono_bold</item>
        <item name="android:fontFamily">@font/ubuntu_mono_bold</item>
        <item name="android:textSize">24sp</item>
        <item name="titleTextColor">@color/black </item>
    </style>

    <style name="Theme.TalkTales.Button.Primary" parent="Base.Theme.TalkTales">
        <item name="android:layout_height">48dp</item>
        <item name="android:backgroundTint">@color/orange</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="cornerRadius">6dp</item>
    </style>

    <style name="CardViewTopRadius" parent="Widget.Material3.CardView.Elevated">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MaterialCardView.Cut</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="cardBackgroundColor">@color/white_50</item>
    </style>

    <style name="CardViewBubble" parent="Widget.Material3.CardView.Elevated">
        <item name="shapeAppearanceOverlay">@style/BubbleShape</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="cardBackgroundColor">@color/white_100</item>
    </style>


    <style name="Widget.App.Chip" parent="Widget.Material3.Chip.Suggestion">
        <item name="chipBackgroundColor">@color/orange_50</item>
        <item name="chipStrokeWidth">0dp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textAppearance">@style/ChipTextAppearance</item>
        <item name="android:textColor">@color/black</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.App.SmallComponent</item>
    </style>

    <style name="ChipTextAppearance">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="ShapeAppearanceOverlay.MaterialCardView.Cut" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">32dp</item>
        <item name="cornerSizeTopLeft">32dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="BubbleShape" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">32dp</item>
        <item name="cornerSizeBottomRight">32dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">999dp</item>
    </style>

    <style name="Theme.TalkTales" parent="Base.Theme.TalkTales" />

<!--    Confirmation Alert-->
    <style name="ThemeOverlay.App.MaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialog.App.Title.Text</item>
        <item name="materialAlertDialogBodyTextStyle">@style/MaterialAlertDialog.App.Body.Text</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.App.SmallComponent2</item> <!-- your custom shape appearance for your dialog. In my case, I am changing corner radius of dialog to rounded 20dp corners-->
        <item name="colorSurface">@color/white</item>
        <item name="colorPrimary">@color/orange</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.App.Button.Danger</item> <!-- your custom positive button style-->
        <item name="buttonBarNegativeButtonStyle">@style/Widget.App.Button</item> <!-- your custom negtive button style-->
    </style>
    <style name="MaterialAlertDialog.App.Title.Text" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>
    <style name="MaterialAlertDialog.App.Body.Text" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent2" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>

    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="android:textAppearance">@style/MyTextAppearance</item>
        <item name="android:textColor">@color/orange</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="Widget.App.Button.Danger" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="android:textAppearance">@style/MyTextAppearance</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="MyTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>
</resources>